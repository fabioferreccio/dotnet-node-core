{
  "name": "dotnet-node-core",
  "version": "1.0.0",
  "description": "Foundational implementation of a C# Standard Library for Node.js",
  "main": "dist/System/index.js",
  "types": "dist/System/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts"
  },
  "keywords": [
    "csharp",
    "dotnet",
    "stdlib",
    "ddd"
  ],
  "author": "dotnet-node-core Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.3"
  }
}
